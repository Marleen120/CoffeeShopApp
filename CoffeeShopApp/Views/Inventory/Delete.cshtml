@model CoffeeShopApp.Models.Inventory

@{
    ViewBag.Title = "Delete Inventory Item";
}

<div class="delete-wrapper">
    <h2>Delete Item</h2>

    <p class="warning-text">Are you sure you want to delete this item?</p>

    <dl class="dl-horizontal delete-details">
        <dt>Product Name:</dt>
        <dd>@Model.ProductName</dd>

        <dt>Quantity:</dt>
        <dd>@Model.Quantity</dd>

        <dt>Unit:</dt>
        <dd>@Model.Unit</dd>

        <dt>Price:</dt>
        <dd>@Model.Price</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Inventory", new { id = Model.Id }, FormMethod.Post))
    {
        <div class="btn-group-delete">
            <button type="submit" class="btn btn-danger btn-delete">Yes, Delete</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary btn-cancel" })
        </div>
    }
</div>

<style>
    body {
        background-color: #fdfaf6;
        font-family: 'Segoe UI', sans-serif;
    }

    .delete-wrapper {
        max-width: 600px;
        margin: 60px auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 14px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        text-align: center;
    }

    h2 {
        color: #4C2918;
        margin-bottom: 20px;
    }

    .warning-text {
        color: black;
        font-size: 18px;
        font-weight: 500;
        margin-bottom: 30px;
    }

    .delete-details {
        text-align: left;
        margin: 0 auto 30px;
        max-width: 400px;
    }

        .delete-details dt {
            font-weight: 600;
            color: #5D4037;
            margin-top: 10px;
        }

        .delete-details dd {
            margin-left: 0;
            margin-bottom: 10px;
            color: #333;
        }

    .btn-group-delete {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .btn-delete {
        background-color: darkred;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 15px;
        color: white;
    }

        .btn-delete:hover {
            background-color: #b30000;
        }

    .btn-cancel {
        background-color: black;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 15px;
        color: white;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background-color: #6d4c41;
        }
</style>

@model CoffeeShopApp.Models.Auth
@{
    Layout = null;
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Coffee Shop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital@1&display=swap" rel="stylesheet">

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .overlay-text p {
            font-family: 'Playfair Display', serif;
            font-style: italic;
        }

        .login-container {
            display: flex;
            height: 100vh;
        }

        .left-section {
            flex: 1.5;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: stretch;
        }

            .left-section img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .overlay-text {
            position: absolute;
            top: 30px;
            right: 40px;
            color: white;
            text-align: right;
            background: none;
            padding: 0;
            border-radius: 0;
            font-size: 18px;
            line-height: 1.6;
        }

        .animated-line {
            opacity: 0;
            display: inline-block;
            animation: fadeIn 1s ease forwards;
        }

        .line1 {
            animation-delay: 0.3s;
        }

        .line2 {
            animation-delay: 1.0s;
        }

        .line3 {
            animation-delay: 1.8s;
        }

        .animated-heading {
            opacity: 0;
            color: #fff;
            font-size: 20px;
            font-weight: bold;
            margin-top: 15px;
            animation: fadeIn 1s ease forwards;
            animation-delay: 3.0s;
        }

        @@keyframes fadeIn {
            to {
                opacity: 1;
            }
        }

        .right-section {
            flex: 1;
            background: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
        }

        .form-box {
            width: 100%;
            max-width: 400px;
        }

            .form-box h2 {
                color: #5b3920;
                font-weight: bold;
                margin-bottom: 30px;
                text-align: center;
            }

        .form-control {
            border-radius: 6px;
            margin-bottom: 20px;
        }

        .btn-login {
            background-color: #5b3920;
            color: white;
            border-radius: 6px;
            width: 50%;
            display: block;
            margin: 20px auto;
        }

            .btn-login:hover {
                background-color: #3e2714;
                color: white;
            }

        .logo-wrapper {
            text-align: center;
        }

        .logo-img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 15px;
        }
        .right-section label {
            color: black;
            font-weight: 500;
        }

    </style>
</head>
<body>
    <div class="login-container">
        <!-- Left Image -->
        <div class="left-section">
            <img src="@Url.Content("~/Content/images/login.jpg")" alt="Coffee Splash" />
            <div class="overlay-text">
                <p>
                    <span class="animated-line line1">Escape the chaos & enter the cottage.</span><br />
                    <span class="animated-line line2">Warm mugs.</span><br />
                    <span class="animated-line line3">Calm vibes.</span>
                </p>
                <h3 class="animated-heading">THE COFFEE COTTAGE</h3>
            </div>
        </div>

        <!--  Login Form  -->
        <div class="right-section">
            <div class="form-box">
                <div class="logo-wrapper">
                    <img src="@Url.Content("~/Content/images/logo.png")" alt="Coffee Cottage Logo" class="logo-img" />
                </div>
                <h2>Welcome Back</h2>

                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter your username" })
                    </div>

                    <div class="form-group mb-4">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password" })
                    </div>

                    <button type="submit" class="btn btn-login">Login</button>
                }

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                }
            </div>
        </div>
    </div>
</body>
</html>

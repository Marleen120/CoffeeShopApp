@model CoffeeShopApp.Models.Order
@{
    ViewBag.Title = "Create Order";
}

<div class="form-wrapper">
    <h2 class="text-center mb-4 create-heading">@ViewBag.Title</h2>

    @using (Html.BeginForm("Create", "Orders", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.CustomerName, "Customer Name")
            @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", name = "customerName", required = "required" })
        </div>

        
        <div class="form-group mb-3">
            <label>Product Name</label>
            <select name="productNames" class="form-control product-dropdown" id="ProductDropdown" required>
                @foreach (var item in ViewBag.ProductList as IEnumerable<SelectListItem>)
                {
                    <option value="@item.Text">@item.Text</option>
                }
            </select>
        </div>

        <div class="form-group mb-3">
            <label>Quantity</label>
            <input type="number" name="quantities" class="form-control" min="1" required />
        </div>

        <div class="form-group mb-3">
            <label>Unit Price</label>
            <input type="text" class="form-control" name="unitPrices" readonly id="PriceBox" />
        </div>

        
        <div id="additionalProducts"></div>

       
        <div class="form-group mb-3">
            <button type="button" class="btn black-btn" onclick="addProduct()">Add Another Product</button>
        </div>

        
        <button type="submit" class="btn black-btn d-block mx-auto">Save</button>
    }
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // Load price for first product
        $('#ProductDropdown').change(function () {
            var productName = $(this).val();
            if (productName) {
                $.get('/Orders/GetPrice', { productName: productName }, function (data) {
                    $('#PriceBox').val(data);
                });
            } else {
                $('#PriceBox').val('');
            }
        });

       
        function addProduct() {
            const rowIndex = $('#additionalProducts .form-group').length / 3;
            const options = $('#ProductDropdown').html();

            const newFields = `
                        <div class="form-group mb-3">
                            <label>Product Name</label>
                            <select name="productNames" class="form-control dynamic-product" data-index="${rowIndex}" required>
                                ${options}
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label>Quantity</label>
                            <input type="number" name="quantities" class="form-control" min="1" required />
                        </div>
                        <div class="form-group mb-3">
                            <label>Unit Price</label>
                            <input type="text" class="form-control dynamic-price" name="unitPrices" readonly id="price-${rowIndex}" />
                        </div>
                    `;
            $('#additionalProducts').append(newFields);
        }

        
        $(document).on('change', '.dynamic-product', function () {
            const selectedProduct = $(this).val();
            const index = $(this).data('index');
            if (selectedProduct) {
                $.get('/Orders/GetPrice', { productName: selectedProduct }, function (price) {
                    $(`#price-${index}`).val(price);
                });
            } else {
                $(`#price-${index}`).val('');
            }
        });
    </script>
}


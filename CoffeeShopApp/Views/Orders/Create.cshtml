            transform: scale(1.03);
        }

    .form-wrapper {
        max-width: 600px;
        margin: 50px auto;
        padding: 40px 30px;
        background-color: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(12px);
        border: 2px solid black;
        border-radius: 14px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }

    .form-group {
        display: grid;
        justify-items: center;
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: 600;
            margin-bottom: 12px;

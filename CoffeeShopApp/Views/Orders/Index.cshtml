@model IEnumerable<CoffeeShopApp.Models.Order>

@{
    ViewBag.Title = "Orders";
}

<div class="inventory-wrapper">
    <h2 class="inventory-title">Manage Orders</h2>

    <p>
        @Html.ActionLink("Create New Order", "Create", null, new { @class = "btn add-btn" })
    </p>

    <div class="table-container">
        <table class="inventory-table">
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Product</th>
                    <th>Qty</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                    <th>Total Bill</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    bool isFirst = true; //1 order
                    int rowspan = order.OrderItems.Count; //no of products
                    decimal totalBill = order.OrderItems.Sum(x => x.Quantity * x.UnitPrice);

                    foreach (var item in order.OrderItems)
                    {
                        <tr>
                            @if (isFirst)
                            {
                                <td rowspan="@rowspan">@order.CustomerName</td>
                            }

                            <td>@item.ProductName</td>
                            <td>@item.Quantity</td>
                            <td>@String.Format("{0:N2}", item.UnitPrice)</td>
                            <td>@String.Format("{0:N2}", item.Quantity * item.UnitPrice)</td>

                            @if (isFirst)
                            {
                                <td rowspan="@rowspan">@String.Format("{0:N2}", totalBill)</td>
                                <!--  Total Bill -->
                                <td rowspan="@rowspan">
                                    @Html.ActionLink("Edit", "Edit", new { id = order.Id }, new { @class = "action-btn edit-btn" })
                                    @Html.ActionLink("Delete", "Delete", new { id = order.Id }, new { @class = "action-btn delete-btn" })
                                </td>
                            }
                        </tr>

                        isFirst = false;
                        if (item == order.OrderItems.Last())
                        {
                            <tr class="order-separator"><td colspan="7"></td></tr>
                        }

                    }
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background: #fdfaf6;
        margin: 0;
        padding: 0;
    }
    .order-separator td {
        border-top: 2px solid gray;
        padding: 0;
        height: 1px;
    }


    .inventory-wrapper {
        max-width: 1080px;
        margin: 40px auto;
        padding: 30px;
    }

    .inventory-title {
        font-size: 30px;
        text-align: center;
        color: #4C2918;
        margin: -50px 0 10px 0;
        letter-spacing: 1px;
        text-shadow: 1px 1px 2px white;
    }

    .add-btn {
        background-color: #4C2918;
        color: white !important;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 15px;
        text-decoration: none;
        transition: background 0.3s;
        margin-bottom: 20px;
        margin-top: 20px;
        display: inline-block;
    }

        .add-btn:hover {
            background-color: #6d4c41;
            color: white !important;
        }

    .table-container {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
        overflow-x: auto;
    }

    .inventory-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 15px;
    }

        .inventory-table th {
            background-color: #d7ccc8;
            color: #3e2723;
            font-weight: 600;
            padding: 14px;
            text-align: center;
            border-bottom: 2px solid #bbb;
        }

        .inventory-table td {
            padding: 14px;
            text-align: center;
            border-bottom: 1px solid #eee;
            color: #4e342e;
        }

        .inventory-table tbody tr:hover {
            background-color: #f5f5f5;
            transition: 0.2s;
        }

    .action-btn {
        padding: 6px 12px;
        margin: 4px 0;
        border-radius: 6px;
        font-size: 14px;
        text-decoration: none;
        color: white;
        display: inline-block;
    }

    .edit-btn {
        background-color: black;
    }

    .delete-btn {
        background-color: darkred;
    }

    .edit-btn:hover {
        background-color: dimgrey;
    }

    .delete-btn:hover {
        background-color: #BA0E08;
    }

    .action-btn:hover,
    .action-btn:focus,
    .action-btn:active {
        color: white;
        text-decoration: none !important;
    }
</style>
